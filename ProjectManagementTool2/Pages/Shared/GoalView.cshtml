@using ProjectManagementTool.Models
@model ProjectManagementTool.Models.Goal


<div class="container-fluid flex-column align-content-center">
	<h3> Goal </h3>
	<div class="d-flex flex-row">
	<div class="progress w-75" role="progressbar" aria-label="Example with label" aria-valuenow=@Model.completionPercentage aria-valuemin="0" aria-valuemax="100">
		<div class="progress-bar" style="width: @Model.completionPercentage%">@Model.completionPercentage%</div>
	</div>

	<a class="btn btn-secondary w-25" asp-page="/projectOverview" asp-route-id="@Model.projectGuid">View project</a>
	
	</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</div>